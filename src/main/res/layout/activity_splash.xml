<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:andriod = "http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        andriod:id="@+id/viewPager"
        andriod:layout_height="match_parent"
        andriod:layout_width="match_parent" />

    <LinearLayout
        andriod:id="@+id/ll_indicator"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:background="@android:color/transparent"
        andriod:layout_gravity="center_horizontal|bottom"
        andriod:layout_marginBottom="30dp"
        andriod:orientation="horizontal"
        >

    </LinearLayout>
</FrameLayout>