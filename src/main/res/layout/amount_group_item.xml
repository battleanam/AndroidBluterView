<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="12dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/amount_item_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/touxiang" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amount_item_source_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="@string/立即注册" />

        <TextView
            android:id="@+id/amount_item_money_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/立即注册" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/type"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/shouru2"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amount_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="end"
            android:text="@string/立即注册" />

        <TextView
            android:id="@+id/amount_item_note_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/立即注册" />
    </LinearLayout>

</LinearLayout>